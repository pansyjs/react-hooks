{
  "name": "@pansy/react-hooks",
  "version": "0.2.0",
  "main": "cjs/index.js",
  "esnext": "esnext/index.js",
  "types": "cjs/index.d.ts",
  "module": "esm/index.js",
  "keywords": [
    "react",
    "hook",
    "react-hook",
    "browser",
    "ssr"
  ],
  "repository": "git@github.com:pansyjs/react-hooks.git",
  "author": "wangxingkang <wang_xingkang@qq.com>",
  "license": "MIT",
  "files": [
    "cjs",
    "esm",
    "esnext"
  ],
  "scripts": {
    "start": "dumi dev",
    "site": "dumi build",
    "build": "npm run entry && npm run build:clean && npm run build:all",
    "build:all": "npm run build:cjs && npm run build:esm && npm run build:esnext",
    "build:clean": "rimraf ./cjs ./esm ./esnext",
    "build:cjs": "tsc -p ./tsconfig.build.json --module CommonJS --target ES5 --outDir ./cjs",
    "build:esm": "tsc -p ./tsconfig.build.json --module ES6 --target ES5 --outDir ./esm",
    "build:esnext": "tsc -p ./tsconfig.build.json --module ESNext --target ESNext --outDir ./esnext",
    "lint:es": "eslint ./src --ext '.ts,.tsx'",
    "lint:esfix": "yarn lint:es --fix",
    "commit": "commit",
    "entry": "walrus entry",
    "test": "walrus-test",
    "release": "walrus release --commit-message 'ðŸ”– chore(release): publish %v'",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.2",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "@walrus/cli": "1.3.4",
    "@walrus/commit": "1.2.2",
    "@walrus/plugin-entry": "0.3.0",
    "@walrus/plugin-release": "1.14.2",
    "@walrus/test": "1.3.0",
    "antd": "4.17.3",
    "dumi": "1.1.36",
    "eslint": "8.4.1",
    "eslint-config-alloy": "4.4.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "^7.0.4",
    "pinst": "^2.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "typescript": "4.5.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
