{
  "name": "@pansy/root",
  "private": true,
  "scripts": {
    "start": "dumi dev",
    "site": "dumi build",
    "build": "pnpm -r --filter ./hooks run build",
    "lint:es": "eslint ./src --ext '.ts,.tsx'",
    "lint:esfix": "pnpm lint:es --fix",
    "commit": "commit",
    "create:hook": "walrus run ./scripts/create-hooks.ts",
    "entry": "walrus entry",
    "test": "walrus-test",
    "publish": "walrus run ./scripts/publish.ts",
    "release:old": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "release": "walrus release",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@pansy/hook-utils": "workspace:*",
