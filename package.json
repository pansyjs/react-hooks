    "@umijs/utils": "^3.5.20",
    "@walrus/cli": "1.3.4",
    "@walrus/cli-utils": "2.2.0",
    "@walrus/plugin-release": "1.14.3",
    "@walrus/plugin-run": "0.5.2",
    "@walrus/test": "1.3.0",
    "antd": "4.18.5",
    "conventional-changelog-cli": "2.2.2",
